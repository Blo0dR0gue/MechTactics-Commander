{
  "name": "mechtactics-commander",
  "version": "0.1.5",
  "description": "BattleTech strategy map",
  "main": "./dist/app/core/main.js",
  "scripts": {
    "start:ts": "cross-env NODE_ENV=development electron -r ts-node/register ./src/app/core/main.ts",
    "start": "cross-env NODE_ENV=development electron ./dist/app/core/main.js",
    "build:static": "node ./copy.js",
    "watch:static": "nodemon --watch ./src --exec npm run build:static",
    "build:ts": "tsc",
    "watch:ts": "tsc -w",
    "build:ts:required": "tsc --project ./tsconfig-build.json",
    "watch:ts:required": "tsc --project ./tsconfig-build.json -w",
    "build:webpack": "webpack --config webpack.config.js",
    "build:webpack:prod": "webpack --config webpack.config.js --mode production",
    "watch:webpack": "webpack --config webpack.config.js --watch",
    "watch:all": "concurrently npm:watch:static npm:watch:ts npm:watch:webpack",
    "build:all": "npm run build:static && npm run build:ts && npm run build:webpack",
    "watch:required": "concurrently npm:watch:static npm:watch:ts:required npm:watch:webpack",
    "build:required": "npm run build:static && npm run build:ts:required && npm run build:webpack",
    "build:all:prod": "npm run build:static && npm run build:ts && npm run build:webpack:prod",
    "build:required:prod": "npm run build:static && npm run build:ts:required && npm run build:webpack:prod",
    "lint": "eslint . --ext .ts",
    "postinstall": "electron-builder install-app-deps",
    "build:exe": "npm run clear:output && npm run build:required:prod && npm run postinstall && electron-builder --win --publish never",
    "publish": "npm run clear:output && npm run build:required:prod && npm run postinstall && electron-builder --win --publish always",
    "test:unit": "jest",
    "test": "npm run test:unit",
    "clear:output": "rimraf ./dist/ && rimraf ./release/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Blo0dR0gue/MechTactics-Commander.git"
  },
  "author": "Daniel Czeschner",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Blo0dR0gue/MechTactics-Commander/issues"
  },
  "homepage": "https://github.com/Blo0dR0gue/MechTactics-Commander#readme",
  "devDependencies": {
    "@types/babel__core": "^7.20.2",
    "@types/jest": "^29.5.5",
    "@typescript-eslint/eslint-plugin": "^6.5.0",
    "@typescript-eslint/parser": "^6.5.0",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.1",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "css-loader": "^6.8.1",
    "electron": "^26.1.0",
    "electron-builder": "^24.6.4",
    "eslint": "^8.48.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "postcss-loader": "^7.3.3",
    "rimraf": "^5.0.1",
    "sass": "^1.68.0",
    "sass-loader": "^13.3.2",
    "style-loader": "^3.3.3",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.4.4",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@popperjs/core": "^2.11.8",
    "@types/bootstrap": "^5.2.7",
    "bootstrap": "^5.3.2",
    "csv": "^6.3.8",
    "electron-reload": "^2.0.0-alpha.1",
    "electron-squirrel-startup": "^1.0.0",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.4",
    "sqlite": "^5.0.1",
    "sqlite3": "^5.1.6"
  }
}
